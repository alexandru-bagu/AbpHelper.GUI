@using Microsoft.Extensions.Localization
@using EasyAbp.AbpHelper.Gui.Localization
@inject IStringLocalizer<GuiResource> L
<BarItem>
    <BarDropdown>
        <BarDropdownToggle>
            @L["Logs"]
        </BarDropdownToggle>
        <BarDropdownMenu>
            <BarDropdownItem Clicked="OpenRecentLogFileAsync">
                @L["RecentLogs"] <Icon Name="IconName.ExternalLinkSquareAlt"/>
            </BarDropdownItem>
            <BarDropdownItem Clicked="OpenRecentErrorLogFileAsync">
                @L["RecentErrorLogs"] <Icon Name="IconName.ExternalLinkSquareAlt"/>
            </BarDropdownItem>
        </BarDropdownMenu>
    </BarDropdown>
</BarItem>